<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class="carousel-header mx-5 mt-5">
  <div class="subtitle">I Nostri Servizi</div>
  <div class="header-container">
    <h2 class="title home-services">Il nostro team di dentisti ti può offrire un'ampia varietà di servizi</h2>
    <div class="split-content home-services-right">
      <a class="btn btn-primary" href="#">Prenota una visita</a>
    </div>
  </div>
</div>
<div class="container my-3">
  <div class="row mx-auto my-auto">
    <div id="myCarousel" class="carousel slide w-100" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item py-5 active">
            <div class="row">
              <div class="col-sm-4">
                  <div class="card">
                    <div class="card-body">
                      <div class="image-container">
                        <%= image_tag "estetica.svg", class: "img"%>
                      </div>
                      <h4 class="card-title">Estetica Dentale</h4>
                      <p class="card-text">Alcune righe di spiegazione del servizio</p>
                    </div>
                  </div>
              </div>
              <div class="col-sm-4">
                  <div class="card">
                    <div class="card-body">
                      <div class="image-container">
                        <%= image_tag "ortodonzia.svg", class: "img"%>
                      </div>
                      <h4 class="card-title">Ortodonzia</h4>
                      <p class="card-text">Alcune righe di spiegazione del servizio</p>
                    </div>
                  </div>
              </div>
              <div class="col-sm-4">
                  <div class="card">
                    <div class="card-body">
                      <div class="image-container">
                        <%= image_tag "igiene.svg", class: "img"%>
                      </div>
                      <h4 class="card-title">Igiene Dentale</h4>
                      <p class="card-text">Alcune righe di spiegazione del servizio</p>
                    </div>
                  </div>
              </div>
            </div>
        </div>
        <div class="carousel-item py-5">
            <div class="row">
                <div class="col-sm-4">
                    <div class="card">
                      <div class="card-body">
                        <div class="image-container">
                          <%= image_tag "chirurgia.svg", class: "img"%>
                        </div>
                        <h4 class="card-title">Chirurgia Dentale</h4>
                        <p class="card-text">Alcune righe di spiegazione del servizio</p>
                      </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                      <div class="card-body">
                        <div class="image-container">
                          <%= image_tag "impianti.svg", class: "img"%>
                        </div>
                        <h4 class="card-title">Impianti dentali</h4>
                        <p class="card-text">Alcune righe di spiegazione del servizio</p>
                      </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                      <div class="card-body">
                        <div class="image-container">
                          <%= image_tag "tecnica.svg", class: "img"%>
                        </div>
                        <h4 class="card-title">Trattamento Dentale</h4>
                        <p class="card-text">Alcune righe di spiegazione del servizio</p>
                      </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
      <a class="carousel-control-prev text-dark" href="#myCarousel" role="button" data-slide="prev">
        <span class="fa fa-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next text-dark" href="#myCarousel" role="button" data-slide="next">
        <span class="fa fa-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
